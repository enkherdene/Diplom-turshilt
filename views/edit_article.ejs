<% include partials/header.ejs %>

    
        <h1><%= title %></h1>
        <% if (article) { %>
        <form action="/article/edit/<%= article.id%>" method="post">
            <div class="form-group">
                <label for="title">Гарчиг</label>
                <input class="form-control" type="text" name="title" value="<%= article.title%>">
            </div>
             <div class="form-group">
                <label for="auther">Нийтлэгч</label>
                <input class="form-control" type="text" name="auther" value="<%= article.auther%>">
            </div>
             <div class="form-group">
                <label for="body">Тайлбар</label>
                <textarea class="form-control" name="body" id="" cols="30" rows="2" > <%= article.body%> </textarea>
            </div>
            <button type="submit" class="btn btn-primary">Засах</button>
           </form>
           <% } %>


    
   
